<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-rose card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Simple Table</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>

                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>phone</th>
                                        <th>Status</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each users}}
                                    <tr>
                                        <td>{{name}}</td>
                                        <td>{{email}}</td>
                                        <td> {{phone}}</td>

                                        <td>
                                            {{#if status}}
                                            <a class="btn btn-success" id="userCurrentStatus" onclick="changeStatus('{{_id}}')"  style="color:#fff"> Active</a>
                                            {{else}}
                                            <a class="btn btn-danger" id="userCurrentStatus"  onclick="changeStatus('{{_id}}')"  style="color:#fff"> Deactive </a>
                                            {{/if}}
                                        </td>

                                    </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>