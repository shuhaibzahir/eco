  <script>
    function changeDate(){
      let orderdates=  document.querySelectorAll(".order_dates")
      orderdates.forEach((item)=>{
         var options = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            };

         let date = item.innerHTML
         let newDate = new Date(date).toLocaleString("en-US", options)
         item.innerHTML= newDate

      })
    }
  </script>
  <script>
    changeDate()
  </script>
							
							
<script>
    
        $(function(){
              $('#datatable').DataTable({
