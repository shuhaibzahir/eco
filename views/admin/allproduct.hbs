 

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-rose card-header-icon">
                        <div class="card-icon">
                          <i class="fas fa-store-alt"></i>
                        </div>
                        <h4 class="card-title">All Product View</h4>
                    </div>
                    <div class="card-body">
                  <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                  </div>
                  <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Brand</th>
                          <th>Type</th>
                          <th>Department</th>
                        <th>Prize</th>
                          <th >Discount</th> 
                          <th>Images</th>
                           <th >Actions</th> 
                          {{!-- //class="disabled-sorting text-right"// --}}
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                        <th>Name</th>
                          <th>Brand</th>
                          <th>Type</th>
                          <th>Department</th>
                        <th>Prize</th>
                          <th >Discount</th> 
                        </tr>
                      </tfoot>
                      <tbody>
                       
                         {{#each allproduct}} 
                         <tr>
                          <td>{{Name}}</td>
                          <td>{{Brand}}</td>
                          <td>{{Type}}</td>
                          <td>{{Department}}</td>
                        <td>{{Prize}}</td>
                          <td>{{Discount}}</td>
                          <td><img src="/pimages/60d486f9abfd2d12964549dd001.jpg" alt=""style="width:50px; height:50px"></td>
                         <td class="td-actions text-right">
                            
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">
                              <i class="material-icons" style="color:#ffff">edit</i>
                            </a>
                            <a  href="/admin/delete-product/{{this._id}}" class="btn btn-danger">
                              <i class="material-icons" style="color:#ffff">close</i>
                            </a>
                          </td>
                       </tr>
                       {{/each}}
                   
                      </tbody>
                    </table>
                  </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>