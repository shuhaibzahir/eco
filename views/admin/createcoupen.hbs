<style>
    .cursour{
        cursor: pointer;
        color: rgb(168, 48, 48);
    }

</style>

<div class="content">
    <div class="container-fluid">
        <div class="row p-5">
            <div class="card-body">
                <div class="col-12">
                    <div class="card ">
                        <div class="card-header card-header-success card-header-icon">
                            <div class="card-icon">
                                <i class="far fa-clock" style="font-size:34px"></i>
                            </div>
                            <h4 class="card-title">Create coupon</h4>
                        </div>
                        <div class="card-body ">
                            <form id="couponCreate" >
                                <div class="row " style="justify-content: space-around;">
                                     <div class="col-md-4 ">
                                        <div class="form-group ">
                                            <label class="bmd-label-floating">Coupen Format</label>
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="eg:- ONAMOFFER2021" name="coupon_name" required>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group col-md-4 ">
                                        <label class="bmd-label-floating">Enter your Discount </label>
                                        <div class="form-group">
                                            <input type="number" class="form-control offerinput"
                                                placeholder="Discount" name="discount" ng-pattern="/^[0-9]+$/"
                                                max="80" min="0" required>
                                        </div>
                                    </div>


                                     <div class="form-group  col-md-4 ">
                                        <label class="bmd-label-floating">Enter Maximum Amount</label>
                                        <div class="form-group">
                                            <input type="number" class="form-control offerinput"
                                                placeholder="Maximum Discount Amount" name="maxAmount" ng-pattern="/^[0-9]+$/" min="0" required>
                                        </div>
                                    </div>


                                      <div class="form-group col-md-4 ">
                                        <label class="bmd-label-floating">Min Purchase Amount</label>
                                        <div class="form-group">
                                            <input type="number" class="form-control offerinput"
                                                placeholder="Minimum amount to be purchase" name="min_purchaseAmount" ng-pattern="/^[0-9]+$/"
                                                 min="0" required>
                                        </div>
                                    </div>

                                    <div class="col-md-4 ">
                                        <div class="form-group ">
                                            <label class="bmd-label-floating">Enter Your Expire Date </label>
                                            <div class="form-group">
                                                <input type="date" class="form-control date" name="couponExp" required>
                                            </div>
                                        </div>
                                    </div>


                     

                                 <div class="card-footer ">
                                        <button type="submit " class="btn btn-success">Submit</button>
                                  </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="row px-5">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-rose card-header-icon">
                        <div class="card-icon">
                            <i class="fas fa-store-alt"></i>
                        </div>
                        <h4 class="card-title">All coupon</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatablesales" class="table table-striped nowrap table-no-bordered table-hover"
                                cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>coupon Name</th>
                                        <th>Discount</th>
                                        <th>Max Amount</th>
                                        <th>Min P-Amount</th>
                                        <th>Expire Date</th>
                                        <th>Total Uses</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                             
                                <tbody>


                                    {{#each couponDetails}}
                                        <tr id="row{{_id}}">
                                        <td>{{couponName}}</td>
                                        <td>{{dicount}} %</td>
                                        <td>₹ {{maxamount}}</td>
                                        <td>₹ {{minpurchase}}</td>
                                        <td class="expdateNormal">{{expire}}</td>
                                        <td>{{usersUsed.length}}</td>
                                        <td><i class="fas fa-minus-circle" style="color: red; cursor:pointer;" onclick="deleteCoupon('{{_id}}')"></i> </td>
                                        </tr>
                                    {{/each}}

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script>

    let dateInput = document.querySelector(".date")
    let testDate = new Date().toLocaleDateString().split("/").reverse().join("-")
    dateInput.setAttribute('min', testDate)

    let allDate = document.querySelectorAll(".expdateNormal")
    allDate.forEach((item)=>{
        let date = new Date(item.innerHTML).toLocaleString().slice(0,10)
        item.innerHTML= date
    })
 
</script>